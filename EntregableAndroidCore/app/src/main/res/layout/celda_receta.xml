<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/negro"
    android:padding="16dp">

        <ImageView
            android:id="@+id/imageview_fondo_celda_receta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/textview_titulo_celda_receta"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageview_fondo_celda_receta"
            android:background="@color/rojoTransparente"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/negro"
            android:textSize="30dp"
            android:textStyle="bold" />
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/roundedcorners"/>

</RelativeLayout>