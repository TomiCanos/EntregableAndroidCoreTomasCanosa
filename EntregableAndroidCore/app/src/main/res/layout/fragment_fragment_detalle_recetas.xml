<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".FragmentDetalleRecetas">


    <TextView
        android:gravity="center"
        android:textColor="@color/negro"
        android:id="@+id/txtview_titulo_ingredientes"
        android:textSize="30dp"
        android:text="Ingredientes:"
        android:layout_width="184dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/txtview_titulo_ingredientes"
        android:id="@+id/txtview_ingredientes_detalle_receta"
        android:layout_width="184dp"
        android:layout_height="170dp"
        android:gravity="center"
        android:textColor="@color/negro"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageview_foto_detalle_receta"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/txtview_ingredientes_detalle_receta"
        android:scaleType="fitXY" />

    <ImageView
        android:src="@drawable/outlinenegro"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/txtview_ingredientes_detalle_receta"
        android:scaleType="fitXY" />

    <TextView
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtview_titulo_detalle_receta"
        android:layout_below="@id/txtview_ingredientes_detalle_receta"
        android:gravity="center"
        android:textColor="@color/negro"
        android:textSize="40dp"
        android:textStyle="bold|italic" />

    <ImageButton
        android:background="@color/negro"
        android:id="@+id/divider"
        android:layout_below="@id/txtview_titulo_detalle_receta"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="5dp" />
    <TextView
        android:textColor="@color/negro"
        android:textSize="20dp"
        android:layout_below="@id/divider"
        android:layout_margin="16dp"
        android:id="@+id/txtview_preparacion_detalle_receta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>